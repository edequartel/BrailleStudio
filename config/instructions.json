{
  "version": "1.1", 
  "audioBase": "https://www.tastenbraille.com/sounds/nl/alfabet/",
  "snippets": {
    "kijk_naar_leesregel": "kijk-naar-de-leesregel.mp3",
    "komt_er": "komt-er.mp3",
    "de_letter": "de-letter.mp3",
    "vraagteken": "vraagteken.mp3",
    "is_het_een": "is-het-een.mp3",
    "is_het_geen": "is-het-geen.mp3",
    "druk_dan": "druk-dan.mp3",
    "rechts": "rechts.mp3",
    "links": "links.mp3",
    "volgende": "volgende.mp3"
  },

 "varaudiomap": {
  "<a>": "a.mp3",
  "<b>": "b.mp3",
  "<c>": "c.mp3",
  "<d>": "d.mp3",
  "<e>": "e.mp3",
  "<f>": "f.mp3",
  "<g>": "g.mp3",
  "<h>": "h.mp3",
  "<i>": "i.mp3",
  "<j>": "j.mp3",
  "<k>": "k.mp3",
  "<l>": "l.mp3",
  "<m>": "m.mp3",
  "<n>": "n.mp3",
  "<o>": "o.mp3",
  "<p>": "p.mp3",
  "<q>": "q.mp3",
  "<r>": "r.mp3",
  "<s>": "s.mp3",
