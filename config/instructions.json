},

  "instructions": [
    {
      "id": "instr_detect_a",
      "title": "Detecteer letter a",
      "vars": { "TARGET": "<a>" },
      "instructionText": "Kijk naar de leesregel. Is er een a? Druk rechts. Anders links.",
      "script": [
        { "type": "audio", "name": "kijk_naar_leesregel" },
        { "type": "set", "var": "present", "expr": "includes(display, vars.TARGET)" },
        {
          "type": "choice",
          "expr": "vars.present === true",
          "then": [
            { "type": "audio", "name": "is_het_een" },
            { "type": "audioVar", "var": "TARGET" },
            { "type": "audio", "name": "rechts" }
          ],
          "else": [
            { "type": "audio", "name": "is_het_geen" },
            { "type": "audioVar", "var": "TARGET" },
            { "type": "audio", "name": "links" }
          ]
        }
      ]
    },
    {
      "id": "instr_detect_b",
      "title": "Detecteer letter b",
      "vars": { "TARGET": "<b>" },
      "instructionText": "Kijk naar de leesregel. Zie je een b? Rechts. Anders links.",
      "script": [
        { "type": "audio", "name": "kijk_naar_leesregel" },
        { "type": "set", "var": "present", "expr": "includes(display, vars.TARGET)" },
        {
          "type": "choice",
          "expr": "vars.present === true",
          "then": [
            { "type": "audioVar", "var": "TARGET" },
            { "type": "audio", "name": "rechts" }
          ],
          "else": [
            { "type": "audio", "name": "links" }
          ]
        }
      ]
    },
    {
      "id": "instr_detect_c",
      "title": "Detecteer letter c",
      "vars": { "TARGET": "<c>" },
      "instructionText": "Controleer of de letter c voorkomt.",
      "script": [
        { "type": "audio", "name": "komt_er" },
        { "type": "audioVar", "var": "TARGET" },
        { "type": "audio", "name": "vraagteken" }
      ]
    },
    {
      "id": "instr_detect_d",
      "title": "Detecteer letter d",
      "vars": { "TARGET": "<d>" },
      "instructionText": "Let op de leesregel. Is het een d?",
      "script": [
        { "type": "audio", "name": "de_letter" },
        { "type": "audioVar", "var": "TARGET" }
      ]
    },
    {
      "id": "instr_detect_e",
      "title": "Detecteer letter e",
      "vars": { "TARGET": "<e>" },
      "instructionText": "Luister en controleer of e voorkomt.",
      "script": [
        { "type": "audioVar", "var": "TARGET" },
        { "type": "audio", "name": "vraagteken" }
      ]
    },
    {
      "id": "instr_detect_f",
      "title": "Detecteer letter f",
      "vars": { "TARGET": "<f>" },
      "instructionText": "Komt de letter f voor?",
      "script": [
        { "type": "audio", "name": "komt_er" },
        { "type": "audioVar", "var": "TARGET" }
      ]
    },
    {
      "id": "instr_detect_g",
      "title": "Detecteer letter g",
      "vars": { "TARGET": "<g>" },
      "instructionText": "Zoek naar de letter g.",
      "script": [
        { "type": "audioVar", "var": "TARGET" }
      ]
    },
    {
      "id": "instr_detect_h",
      "title": "Detecteer letter h",
      "vars": { "TARGET": "<h>" },
      "instructionText": "Let op: staat h op de leesregel?",
      "script": [
        { "type": "audioVar", "var": "TARGET" },
        { "type": "audio", "name": "vraagteken" }
      ]
    },
    {
      "id": "instr_detect_i",
      "title": "Detecteer letter i",
      "vars": { "TARGET": "<i>" },
      "instructionText": "Controleer de letter i.",
      "script": [
        { "type": "audioVar", "var": "TARGET" }
      ]
    },
    {
      "id": "instr_detect_j",
      "title": "Detecteer letter j",
      "vars": { "TARGET": "<j>" },
      "instructionText": "Is de letter j aanwezig?",
      "script": [
        { "type": "audioVar", "var": "TARGET" },
        { "type": "audio", "name": "volgende" }
      ]
    }
  ]
}