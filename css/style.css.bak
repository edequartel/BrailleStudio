body {
  font-family: system-ui, Arial, sans-serif;
  background: #f5f5f7;
  margin: 0;
  padding: 40px;
  display: flex;
  justify-content: center;
}

.container {
  background: white;
  padding: 30px 40px;
  border-radius: 16px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.1);
}

h1 {
  margin-top: 0;
  font-size: 2rem;
  text-align: center;
}

button {
  font-size: 24px;
  padding: 14px 26px;
  margin: 10px;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  background: #007aff;
  color: white;
  transition: background 0.2s;
}

button:hover {
  background: #005bbb;
}

.info {
  margin-top: 20px;
  text-align: center;
  color: #555;
  font-size: 0.9rem;
}
